%ul.user-list.sf-menu
  %li.user
    //= link_to "#{avatar_img(current_user, {:size =>24})} #{current_user.login}", user_path(current_user)
    = link_to current_user.login, user_path(current_user)
    = avatar_img(current_user, {:size =>"small"})
    %ul
      %li
        =link_to "#{t 'users.top_user.profile'}", user_path(current_user)
      %li
        =link_to "#{t 'users.top_user.settings'}", settings_path
      %li
        =link_to "#{t 'users.top_user.my_karma'}: #{current_user.reputation_on(current_group)}"
      %li
        =link_to "#{t 'users.top_user.my_badges'}", badges_path

  %li.logout
    =link_to t("layouts.application.logout"), destroy_user_session_path
