%header
  =# number_with_delimiter(@answers.total_entries)
  =t(:questions, :scope => "activerecord.models")
  = "- Sort By:" #i18n
%li.newest
  = link_to t("questions.index.newest"), user_path(@user, params.merge(:sort=>"newest")), :rel => "nofollow"
%li.hot
  = link_to t("questions.index.oldest"), user_path(@user, params.merge(:sort=>"oldest")), :rel => "nofollow"
%li.views
  = link_to t("activerecord.attributes.question.views"), user_path(@user, params.merge(:sort=>"views")), :rel => "nofollow"
%li.votes
  = link_to t("questions.index.votes"), user_path(@user, params.merge(:sort=>"votes")), :rel => "nofollow"
